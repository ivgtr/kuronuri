{
  "name": "nonnoun",
  "version": "1.2.2",
  "description": "nonnoun is 名詞を隠します",
  "keywords": [
    "noun",
    "cli"
  ],
  "type": "module",
  "main": "./lib/index.cjs",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "bin": {
    "nonnoun": "./lib/cli.js"
  },
  "engines": {
    "node": ">= 12.2.0"
  },
  "license": "MIT",
  "author": {
    "name": "ivgtr",
    "email": "ivgtr.me@gmail.com",
    "url": "https://github.com/ivgtr"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivgtr/nonnoun.git"
  },
  "homepage": "https://github.com/ivgtr/nonnoun#readme",
  "bugs": {
    "url": "https://github.com/ivgtr/nonnoun/issues"
  },
  "files": [
    "lib",
    "src/index.ts",
    "src/cli.ts"
  ],
  "scripts": {
    "dev": "node --loader ts-node/esm ./src/cli.ts",
    "start": "tsc -w",
    "type-check": "tsc --noEmit",
    "type-build": "tsc --project ./tsconfig-build.json --emitDeclarationOnly",
    "prebuild": "node -e 'fs.rmSync(`lib`, {recursive:true, force:true})'",
    "build": "rollup -c && npm run type-build",
    "format": "prettier -w ./src/*",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "7.14.6",
    "@babel/preset-env": "7.14.7",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-commonjs": "19.0.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.0.0",
    "@rollup/plugin-typescript": "8.2.1",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.0.0",
    "@types/update-notifier": "^5.0.1",
    "eslint": "^7.30.0",
    "eslint-config-sumikko": "^1.2.1",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "rollup": "2.52.7",
    "rollup-plugin-auto-external": "2.0.0",
    "rollup-plugin-preserve-shebang": "^1.0.1",
    "rollup-plugin-terser": "7.0.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "kuromojin": "^3.0.0",
    "meow": "^10.0.1",
    "update-notifier": "^5.1.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "preset": "ts-jest/presets/js-with-ts-esm",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
