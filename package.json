{
  "name": "nonnoun",
  "version": "1.3.0",
  "description": "nonnoun is 名詞を隠します",
  "keywords": [
    "noun",
    "cli"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "nonnoun": "./dist/cli.js"
  },
  "engines": {
    "node": ">= 12.2.0"
  },
  "license": "MIT",
  "author": {
    "name": "ivgtr",
    "email": "ivgtr.me@gmail.com",
    "url": "https://github.com/ivgtr"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivgtr/nonnoun.git"
  },
  "homepage": "https://github.com/ivgtr/nonnoun#readme",
  "bugs": {
    "url": "https://github.com/ivgtr/nonnoun/issues"
  },
  "files": [
    "dist",
    "src/index.ts",
    "src/cli.ts"
  ],
  "scripts": {
    "dev": "node --loader ts-node/esm ./src/cli.ts",
    "start": "tsc -w",
    "type-check": "tsc --noEmit",
    "type-build": "tsc --project ./tsconfig-build.json --emitDeclarationOnly",
    "prebuild": "node -e 'fs.rmSync(`dist`, {recursive:true, force:true})'",
    "build": "rollup -c && npm run type-build",
    "format": "prettier -w ./src/*",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "7.15.8",
    "@babel/preset-env": "7.15.8",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-commonjs": "21.0.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.0.5",
    "@rollup/plugin-typescript": "8.2.5",
    "@types/jest": "27.0.2",
    "@types/node": "16.7.1",
    "@types/update-notifier": "5.1.0",
    "eslint": "7.32.0",
    "eslint-config-sumikko": "1.2.2",
    "jest": "27.2.4",
    "prettier": "2.4.1",
    "rollup": "2.58.0",
    "rollup-plugin-auto-external": "2.0.0",
    "rollup-plugin-preserve-shebang": "1.0.1",
    "rollup-plugin-terser": "7.0.2",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "typescript": "4.4.3"
  },
  "dependencies": {
    "kuromojin": "^3.0.0",
    "meow": "^10.1.1",
    "update-notifier": "^5.1.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "preset": "ts-jest/presets/js-with-ts-esm",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
